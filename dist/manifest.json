{
	"manifest_version": 3,
	"name": "Gelbooru Batch Upload Tools",
	"version": "1.0.2",

	"description": "Allows to save multiple images to the pocket and paste them into Gelbooru upload form",

	"icons": {
		"32": "graphics/32.png",
		"96": "graphics/96.png",
		"128": "graphics/128.png"
	},

	"permissions": [
		"storage",
		"unlimitedStorage"
	],

	"host_permissions": [
		"https://corsproxy.io/*"
	],

	"content_scripts": [{
		"matches": ["*://*.gelbooru.com/*"],
		"js": ["js/gelbooru.js"]
	}, {
		"matches": ["*://*.twitter.com/*"],
		"js": ["js/twitter.js"]
	}],

	"options_ui": {
		"page": "options/options.html"
	}
}